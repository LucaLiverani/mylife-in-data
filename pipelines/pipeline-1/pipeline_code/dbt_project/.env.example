# ClickHouse Connection Configuration for dbt
# ============================================
#
# These environment variables are used by dbt profiles.yml
# Copy this file to .env and fill in the values
#
# For Airflow deployments, these are set in infrastructure/airflow/.env
# and passed through docker-compose.yml

# Development environment (local)
CLICKHOUSE_HOST_DEV=localhost
CLICKHOUSE_PORT_DEV=8123

# Production environment (docker)
CLICKHOUSE_HOST_PROD=clickhouse
CLICKHOUSE_PORT_PROD=9000

# Common credentials
CLICKHOUSE_USER=admin
CLICKHOUSE_PASSWORD=your_password_here
CLICKHOUSE_DATABASE=bronze

# Target environment (dev or prod)
DBT_TARGET=dev
