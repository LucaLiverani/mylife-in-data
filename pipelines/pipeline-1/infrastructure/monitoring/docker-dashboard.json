{
  "dashboard": {
    "title": "Docker Container Monitoring",
    "tags": ["docker", "cadvisor"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Running Containers",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "count(container_memory_usage_bytes{id=~\"/system.slice/docker.*\"})",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value"
        }
      },
      {
        "id": 2,
        "title": "Total Memory Usage",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "sum(container_memory_usage_bytes{id=~\"/system.slice/docker.*\"})",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "bytes"
          }
        }
      },
      {
        "id": 3,
        "title": "Total CPU Usage",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{id=~\"/system.slice/docker.*\"}[5m])) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent"
          }
        }
      },
      {
        "id": 4,
        "title": "Network I/O (Docker Bridges)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(container_network_receive_bytes_total{id=\"/\",interface=~\"br-.*\"}[5m]))",
            "refId": "A",
            "legendFormat": "Received"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "Bps"
          }
        }
      },
      {
        "id": 5,
        "title": "Memory Usage by Container",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "label_replace(container_memory_usage_bytes{id=~\"/system.slice/docker-.*\"}, \"systemd_id\", \"$1\", \"id\", \"(.*)\") * on(systemd_id) group_left(container_name) max by(systemd_id, container_name) (container_name_info)",
            "refId": "A",
            "legendFormat": "{{container_name}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "custom": {
              "lineWidth": 1,
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 6,
        "title": "CPU Usage by Container",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "label_replace(rate(container_cpu_usage_seconds_total{id=~\"/system.slice/docker-.*\"}[5m]) * 100, \"systemd_id\", \"$1\", \"id\", \"(.*)\") * on(systemd_id) group_left(container_name) max by(systemd_id, container_name) (container_name_info)",
            "refId": "A",
            "legendFormat": "{{container_name}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "custom": {
              "lineWidth": 1,
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Network Receive by Docker Bridge",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "rate(container_network_receive_bytes_total{id=\"/\",interface=~\"br-.*\"}[5m])",
            "refId": "A",
            "legendFormat": "{{interface}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "Bps",
            "custom": {
              "lineWidth": 1,
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Network Transmit by Docker Bridge",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "rate(container_network_transmit_bytes_total{id=\"/\",interface=~\"br-.*\"}[5m])",
            "refId": "A",
            "legendFormat": "{{interface}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "Bps",
            "custom": {
              "lineWidth": 1,
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 9,
        "title": "Disk I/O by Container",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "label_replace(rate(container_fs_reads_bytes_total{id=~\"/system.slice/docker-.*\"}[5m]), \"systemd_id\", \"$1\", \"id\", \"(.*)\") * on(systemd_id) group_left(container_name) max by(systemd_id, container_name) (container_name_info)",
            "refId": "A",
            "legendFormat": "Read: {{container_name}}"
          },
          {
            "expr": "label_replace(rate(container_fs_writes_bytes_total{id=~\"/system.slice/docker-.*\"}[5m]), \"systemd_id\", \"$1\", \"id\", \"(.*)\") * on(systemd_id) group_left(container_name) max by(systemd_id, container_name) (container_name_info)",
            "refId": "B",
            "legendFormat": "Write: {{container_name}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "Bps",
            "custom": {
              "lineWidth": 1,
              "fillOpacity": 10
            }
          }
        }
      }
    ]
  },
  "overwrite": true
}
